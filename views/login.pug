extends layout
block content
    h1 Account Login
    form(method="POST" action="/users/login")
      div(class="form-group")
        label(style=bodyStyle) Email: 
        input(type="text" class="form-control" name="username" placeholder="email")
      div(class="form-group")
        label(style=bodyStyle) Password: 
        input(type="password" class="form-control" name="password" placeholder="Password")
      button(type="submit" class='w3-button w3-white w3-border w3-border-red w3-round') Submit
      
      if(showErrors==true)
        ul(class="errors")
            for val in errors
                    li!= val
