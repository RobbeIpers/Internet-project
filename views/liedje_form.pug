extends layout
block content
    h1 LIEDJESSTEMPLAATS
    form(method='post', action='')
        div.form-group
            .label(style=bodyStyle, for='titel') Titel: 
                input#titel.form-control(name = "titel", type="text", placeholder="vb Baby" value=(undefined===liedje ? '' : liedje.titel))
            .label(for="artiestNaam", style=bodyStyle) Artiest: 
                input#artiestNaam.form-controle(name="artiestNaam", type="text", placeholder="vb Justin Bieber"  value=(undefined===liedje ? '' : liedje.artiestNaam)) 
                div(text-allign='center')
                    button.btn.btn-primary(class='w3-button w3-white w3-border w3-border-red w3-round',type='submit',allign="center", value="zoek") zoek
      
        if(showErrors==true)
            ul(class="errors")
                for val in errors
                        li!= val
                        
        div(class='searchResultaat')                
            if(tracks)
                |Bedoelde je één van deze liedjes
                each val in [0,1,2]
                    form(method='POST', action='/stem')
                      div.form-group  
                        if(img)
                            img(src=img[val]) 
                            k#titel2.form-control(name="titel2", value=(undefined===liedje ? '' : liedje.artiestNaam2))  #{tracks.results.trackmatches.track[val].name} 
                                |van
                            k#artiestNaam2.form-control(name="artiestNaam2", value=(undefined===liedje ? '' : liedje.titel2))  #{tracks.results.trackmatches.track[val].artist}   
                            button.btn.btn-primary(class='w3-button w3-white w3-border w3-border-red w3-round',type='submit',allign="center", value="stem") stem
    
                    