extends layout
block content
    h1 LIEDJESSTEMPLAATS
    form(method='post', action='')
        div.form-group
            .label(style=bodyStyle, for='titel') Titel: 
                input#titel.form-control(name = "titel", type="text", placeholder="vb Baby" value=(undefined===liedje ? '' : liedje.titel))
            .label(for="artiestNaam", style=bodyStyle) Artiest: 
                input#artiestNaam.form-controle(name="artiestNaam", type="text", placeholder="vb Justin Bieber"  value=(undefined===liedje ? '' : liedje.artiestNaam)) 
                div(text-allign='center')
                    button.btn.btn-primary(class='w3-button w3-white w3-border w3-border-red w3-round',type='submit',allign="center", value="zoek") zoek
      
        if(showErrors==true)
            ul(class="errors")
                for val in errors
                        li!= val
                        
    div(class='searchResultaat')                
        if(tracks)
            |Bedoelde je aan van deze liedjes
            form(method='POST', action='liedje/stem')
                div.form-group  
                    if(img)
                        img(src=img[0]) 
                    |#{tracks.results.trackmatches.track[0].name} 
                    input#titel2.form-control(name = "titel2", type="text", placeholder="vb Baby" value=tracks.results.trackmatches.track[0].name,hidden=true)
                    |van 
                    | #{tracks.results.trackmatches.track[0].artist}
                    input#artiest2.form-control(name = "artiest2", type="text", placeholder="vb Baby" value=tracks.results.trackmatches.track[0].artist,hidden=true)
                    button.btn.btn-primary(class='w3-button w3-white w3-border w3-border-red w3-round',type='submit',allign="center", value="stem") stem
            form(method='POST', action='liedje/stem')
                div.form-group  
                    if(img)
                        img(src=img[1]) 
                    |#{tracks.results.trackmatches.track[1].name} 
                    input#titel2.form-control(name = "titel2", type="text", placeholder="vb Baby" value=tracks.results.trackmatches.track[1].name,hidden=true)
                    |van 
                    | #{tracks.results.trackmatches.track[1].artist}
                    input#artiest2.form-control(name = "artiest2", type="text", placeholder="vb Baby" value=tracks.results.trackmatches.track[1].artist,hidden=true)
                    button.btn.btn-primary(class='w3-button w3-white w3-border w3-border-red w3-round',type='submit',allign="center", value="stem") stem
