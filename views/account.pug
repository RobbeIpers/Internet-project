extends layout2

block content
  h1 Welkom op je Account #{user.name}!
  div(class="w3-card w3-round middle padding", id="wit")
      div(class="w3-container w3-padding")
                    if(showErrors==true)
                        ul(class="errors")
                            for val in errors
                                li!= val
      div(class="w3-container w3-padding middle3")
              h5(id='leftfloat')
                  |Je hebt nog #{user.aantStemmen} 
                  if(user.aantStemmen===1) 
                      | stem
                  else
                      | stemmen
              a(href="/liedje")
                  img(src="../images/GoVote.png", alt="stem hier", id='rightfloat')     
      div(class="w3-card w3-round middle2 purple ")
          div(class="w3-container w3-padding")
              if(user.aantStemmen<3)
              div Mijn liedjes:
          div(class="w3-container w3-padding")
              each stem in stemmen
                  form(method='POST', action='')
                      div.form-group
                          li #{stem.titel} van #{stem.artiestNaam}
                              input#stemid.form-control(type='hidden',name='stemid', required='true', value=stem._id)
                              input#stemid.form-control(type='hidden',name='titel', required='true', value=stem.titel)
                              button.btn.btn-primary(style="margin-left:20px",class='w3-button w3-white w3-border w3-border-red w3-round',type='submit',allign="center")
                                  i(class="fa fa-trash")
  
      div(class="w3-card w3-round middle2 purple",id='top')
          div(class="w3-container w3-padding")
              | Hey jij daar! Moedig je vrienden aan om ook op jouw favoriete liedjes te stemmen:
          div(class="w3-container w3-padding")
              #fb-root
              script.
                  (function(d, s, id) {
                  var js, fjs = d.getElementsByTagName(s)[0];
                  if (d.getElementById(id)) return;
                  js = d.createElement(s); js.id = id;
                  js.src = 'https://connect.facebook.net/nl_BE/sdk.js#xfbml=1&version=v3.2&appId=502849933557463&autoLogAppEvents=1';
                  fjs.parentNode.insertBefore(js, fjs);
                  }(document, 'script', 'facebook-jssdk'));
              .fb-share-button(data-mobile-iframe='true', data-size='small', data-layout='button', data-href='https://back2theludieke90s.herokuapp.com/users/account')
                a.fb-xfbml-parse-ignore(href='https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fback2theludieke90s.herokuapp.com%2Fusers%2Faccount&src=sdkpreparse', target='_blank') Delen
      